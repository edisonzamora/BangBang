<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="daudo.zamora.edison.bangbang.fragmentos.LoginFragment">
    <LinearLayout
        android:paddingTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/login_imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"/>
            <LinearLayout
                android:id="@+id/linea_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/nombre"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/login_edit_nombre"
                    android:hint="@string/nombre"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linea_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/contraseña"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/login_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/contraseña"
                    android:gravity="center"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/chb_recordar_usuario"
                    android:text="@string/recordar_usuario"
                    style="@style/chechbox"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_login_aceptar"
                android:text="@string/btn_aceptar"
                style="@style/botones"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
