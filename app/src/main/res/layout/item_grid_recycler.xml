<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@color/colorAccent">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <TextView
        android:id="@+id/titulo_recycler2"
        style="@style/style_Titulo"
        android:text="titulo"/>
        <ImageView
            android:id="@+id/imagen_recycler2"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/style_fecha"
                android:text="@string/fecha_evento"/>
            <TextView
                android:id="@+id/fecha2"
                style="@style/style_fecha"
                android:text="@string/fecha_evento"/>
        </LinearLayout>
        <TextView
            android:id="@+id/coemntario_e_2"
            style="@style/style_comentario"
            android:text="comentario"/>

    </LinearLayout>
</LinearLayout>