<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_layout"
    android:padding="5dp"
    android:background="@color/colorBlano"
    android:orientation="vertical">
    <LinearLayout
        style="@style/style_layout"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imagen_recycler2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher" />
        <LinearLayout
            style="@style/style_layout"
            android:orientation="vertical"
            android:padding="7dp"
            android:background="@color/lila">
            <TextView
                android:id="@+id/titulo_recycler2"
                style="@style/style_Titulo_eventos"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
               <TextView
                    android:id="@+id/fecha2"
                    style="@style/style_fecha"
                    android:textColor="@color/colorBlano"
                    android:layout_weight="1"
                    android:text="@string/fecha_evento"/>
                <ImageView style="@style/style_icon"
                    android:gravity="center"
                    android:tint="@color/colorBlano"
                    android:src="@drawable/ic_date_range_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/style_layout"
                android:orientation="horizontal">
                <TextView style="@style/style_fecha"
                    android:id="@+id/ciudad"
                    android:layout_weight="1"
                    android:text="@string/fecha_evento"
                    android:textColor="@color/colorBlano"/>
                <ImageView style="@style/style_icon"
                    android:tint="@color/colorBlano"
                    android:src="@drawable/ic_location_on_black_24dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/coemntario_e_2"
                style="@style/style_comentario_evento"
                android:text="comentario"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>