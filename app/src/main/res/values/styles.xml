<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!-- estilo de los textos  de la aplicacion -->
    <style name="style_Titulo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/colorBlano</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">"tilulo"</item>
    </style>
    <style name="style_fecha">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/colorBlano</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="style_comentario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/colorBlano</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_layout_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="botones">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/efecto_botones</item>
        <item name="android:textColor">#fff</item>

    </style>
    <style name="content_text_email" parent="content_text">
    <item name="android:hint">@string/email</item>
    <item name="android:drawableLeft">@drawable/email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="content_text_pass" parent="content_text">
        <item name="android:hint">@string/contrase√±a</item>
        <item name="android:drawableLeft">@drawable/clave2</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="CheckBoxIndigo">
        <item name="colorAccent"> </item>
    <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBlano</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="chechbox">
       <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
<style name="content_text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:background">@drawable/signup</item>

</style>

</resources>
